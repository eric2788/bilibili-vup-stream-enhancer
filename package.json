{
  "name": "bilibili-jimaku-filter",
  "displayName": "Bilibili jimaku filter",
  "version": "2.0",
  "description": "功能衆多的同傳字幕過濾插件",
  "author": "Eric Lam <tsukiko852@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn clean && plasmo dev",
    "dev:opera": "yarn dev --target=opera-mv3",
    "dev:firefox": "yarn dev --target=firefox-mv3",
    "build": "plasmo build --source-maps --no-minify",
    "package": "plasmo package",
    "clean": "rm -rf build && rm -rf .plasmo"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@material-tailwind/react": "^2.1.5",
    "@plasmohq/messaging": "^0.6.0",
    "@plasmohq/storage": "^1.9.0",
    "@react-hooks-library/core": "^0.5.1",
    "autoprefixer": "^10.4.16",
    "brotli-dec-wasm": "^2.1.0",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "hash-wasm": "^4.11.0",
    "plasmo": "0.84.0",
    "react": "18.2.0",
    "react-contexify": "^6.0.0",
    "react-dom": "18.2.0",
    "react-state-proxy": "^1.4.11",
    "sonner": "^1.3.1",
    "tailwindcss": "3.3.5",
    "virtual-scroller": "^1.12.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "^0.0.254",
    "@types/glob": "^8.1.0",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@types/semver": "^7.5.6",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "*://api.vtbs.moe/*",
      "*://api.live.bilibili.com/*",
      "*://live.bilibili.com/*",
      "*://*.bilivideo.com/*",
      "*://*.ericlamm.xyz/*"
    ],
    "permissions": [
      "notifications",
      "storage",
      "tabs",
      "contextMenus",
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "matches": [
          "*://live.bilibili.com/*"
        ],
        "resources": [
          "*.wasm"
        ]
      }
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{041b8202-e9d4-4a78-a9da-465c749ed26c}",
        "update_url": "https://eric2788.github.io/bilibili-jimaku-filter/updates.json",
        "strict_min_version": "78.0"
      }
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "action": {
      "default_title": "前往設定界面"
    }
  }
}
