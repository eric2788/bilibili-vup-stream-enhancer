{
  "name": "bilibili-jimaku-filter",
  "displayName": "Bilibili jimaku filter",
  "version": "0.0.1",
  "description": "功能衆多的同傳字幕過濾插件",
  "author": "Eric Lam <tsukiko852@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "dev:opera": "plasmo dev --target=opera-mv3",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build": "plasmo build --no-minify --source-maps",
    "package": "plasmo package"
  },
  "dependencies": {
    "@material-tailwind/react": "^2.1.5",
    "@plasmohq/messaging": "^0.6.0",
    "@plasmohq/storage": "^1.9.0",
    "plasmo": "0.84.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-state-proxy": "^1.4.11",
    "tailwindcss": "3.3.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.251",
    "@types/glob": "^8.1.0",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@types/semver": "^7.5.6",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "*://api.vtbs.moe/*",
      "*://api.live.bilibili.com/*",
      "*://live.bilibili.com/*",
      "*://*.bilivideo.com/*"
    ],
    "permissions": [
      "notifications",
      "storage",
      "tabs",
      "contextMenus"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{041b8202-e9d4-4a78-a9da-465c749ed26c}",
        "update_url": "https://eric2788.github.io/bilibili-jimaku-filter/updates.json",
        "strict_min_version": "78.0"
      }
    }
  }
}
