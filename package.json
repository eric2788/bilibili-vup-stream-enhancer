{
  "name": "bilibili-jimaku-filter",
  "displayName": "Bilibili jimaku filter",
  "version": "0.0.1",
  "description": "功能衆多的同傳字幕過濾插件",
  "author": "Eric Lam <tsukiko852@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --no-minify --source-maps",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.0",
    "@plasmohq/storage": "^1.9.0",
    "plasmo": "0.84.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.251",
    "@types/glob": "^8.1.0",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "*://api.vtbs.moe/*",
      "*://api.live.bilibili.com/*",
      "*://live.bilibili.com/*",
      "*://*.bilivideo.com/*",
      "notifications",
      "storage",
      "tabs",
      "contextMenus"
    ]
  }
}
